<div class="container mt-4">
    <h2 class="text-center">Sign up</h2>
    <div class="row">
        <div class="col-4 mx-auto mt-3">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="form-group">
                    <%= f.text_field :fullname, placeholder: "Full name",class:"form-control form-design" %>
                </div>
                <div class="form-group">
                    <%= f.email_field :email, placeholder: "Email",class:"form-control form-design" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password",class:"form-control form-design" %>
                </div>
                <div class="actions">
                    <%= f.submit "Sign up",class:"btn btn-secondary btn-block" %>
                    <%= link_to "Sign in with Facebook","#",class:"btn btn-primary btn-block mt-2"%>
                </div>
        <% end %>
        </div>
    </div>
</div>