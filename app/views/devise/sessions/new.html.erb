<div class="container mt-4">
    <h2 class="text-center">Log in</h2>
    <div class="row">
        <div class="col-4 mx-auto mt-3">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, placeholder:"Email",class:"form-control form-design" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, placeholder:"password",class:"form-control form-design" %>
                </div>
                <% if devise_mapping.rememberable? %>
                    <div class="d-inline float-left">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>
                <%= link_to "Forgot your password?",new_user_password_path,class:"d-inline float-right" %>
                <div class="actions">
                    <%= f.submit "Log in",class:"btn btn-secondary btn-block" %>
                    <%= link_to "Sign in with Facebook","#",class:"btn btn-primary btn-block mt-2"%>
                </div>
            <% end %>
        </div>
    </div>
</div>

