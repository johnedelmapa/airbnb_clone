<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <span>$<%= @room.price %><span>
            </div>
            <div class="col-4">
                <span>Per Night</span>
            </div>
        </div>
    </div>    
    <div class="card-body"> 
        <%= form_for [@room, @reservation] do |f| %>
            <div class="row">
                <div class="col-6">
                    <label>Check in</label>
                    <%= f.text_field :start_date, readonly: true, placeholder: "Start date",class:"form-control"%>
                </div>
                <div class="col-6">
                    <label>Check out</label>
                    <%= f.text_field :end_date, readonly: true, placeholder: "End date",class:"form-control"%>
                </div>
            </div>
            <%= f.submit "Book now", class:"btn btn-primary mt-3 btn-block"%>
        <% end %>
    </div>
</div>
<script>
  $(function(){
    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });

    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });
</script>