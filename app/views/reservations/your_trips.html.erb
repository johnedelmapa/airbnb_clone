<div class="container mt-3">
    <div class="row">
        <div class="col-3"> 
            <ul class="list-group">
                <%= link_to "Your Listing", rooms_path,class:"list-group-item" %>
                <%= link_to "Your Locations","#",class:"list-group-item" %>
                <%= link_to "Your Trips",your_trips_path,class:"list-group-item" %>
            </ul>           
        </div> 
        <div class="col-9">
            <div class="card">
                <div class="card-header">Your Trips</div>
                <div class="card-body p-4">
                    <div class="row">
                        <% @reservations.each do |reservation| %>
                            <div class="col-2 mt-2"><%= reservation.start_date.strftime("%d-%b-%Y") %></div>
                            <div class="col-2 mt-2"><%= image_tag reservation.room.cover_photo(:thumb)%></div>
                            <div class="col-5 mt-2">                
                                <span class="d-block"><%= link_to reservation.room.listing_name ,room_path(reservation.room) %></span>
                                <%= image_tag avatar_url(reservation.room.user), class:"rounded-circle avatar-small mb-2"%>
                                <span><%= link_to reservation.user.fullname,user_path(reservation.user)%></span>
                            </div>
                            <div class="col-3 mt-2"><%= link_to "Review the host", "#",class:"btn btn-primary"%></div>
                            <hr>
                        <% end %>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>