<div class="container mt-3">
    <div class="row">
        <div class="col-3">
            <%= render 'sidebar'%>
        </div>

        <div class="col-9">
            <div class="card">
                <div class="card-header">Amenities</div>
                <div class="card-body">
                    <%= form_for @room do |f|%>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <%= f.check_box :is_tv %> TV
                                </div>
                            </div>
                               <div class="col-4">
                                <div class="form-group">
                                    <%= f.check_box :is_kitchen %> Kitchen
                                </div>
                            </div>
                               <div class="col-4">
                                <div class="form-group">
                                    <%= f.check_box :is_internet %> Intenet
                                </div>
                            </div>
                               <div class="col-4">
                                <div class="form-group">
                                    <%= f.check_box :is_heating %> Heating
                                </div>
                            </div>
                               <div class="col-4">
                                <div class="form-group">
                                    <%= f.check_box :is_air %> Air conditioning
                                </div>
                            </div>
                            
                        </div>    
                        <div>
                            <%= f.submit "Save", class:"btn btn-primary" %>
                        </div>                                    
                    <% end %>                
                </div>
            </div>
        </div>
    </div>
</div>