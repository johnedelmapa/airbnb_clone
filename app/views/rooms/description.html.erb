<div class="container mt-3">
    <div class="row">
        <div class="col-3">
            <%= render 'sidebar'%>
        </div>

        <div class="col-9">
            <div class="card">
                <div class="card-header">Description</div>
                <div class="card-body">
                    <%= form_for @room do |f|%>
                        <div class="form-group">
                            <%= f.label :Listing_name %>
                            <%= f.text_field :listing_name, placeholder: "What is your listing name?",class:"form-control form-design", required: true %>
                        </div>
                        <div class="form-group">
                            <%= f.label :Summary %>
                            <%= f.text_area :summary, placeholder: "Summary of your house",class:"form-control form-design", required: true %>
                        </div>   
                        <div>
                            <%= f.submit "Save", class:"btn btn-primary" %>
                        </div>                                             
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>