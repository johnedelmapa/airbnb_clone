<div class="container mt-3">
    <div class="row">
        <div class="col-3"> 
            <ul class="list-group">
                <%= link_to "Your Listing", rooms_path,class:"list-group-item" %>
                <%= link_to "Your Locations","#",class:"list-group-item" %>
                <%= link_to "Your Trips","#",class:"list-group-item" %>
            </ul>           
        </div> 
        <div class="col-9">
            <div class="card">
                <div class="card-header">Listing</div>
                <div class="card-body">
                    <div class="row">
                        <% @rooms.each do |room| %>
                            <div class="col-2 mt-3">
                                <%= image_tag room.cover_photo(:thumb) %>
                            </div>
                            <div class="col-7 mt-3">
                                <%= room.listing_name %>
                            </div>
                            <div class="col-3 mt-3 text-right">
                                <%= link_to "Update",listing_room_path(room),class:"btn btn-outline-primary"%>
                            </div>
                        <%end%>
                </div>
            </div>
        </div>
    </div>
</div>